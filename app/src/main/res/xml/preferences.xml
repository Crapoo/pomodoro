<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_notif_key"
        android:summary="@string/pref_notif_summary"
        android:title="@string/pref_notif"/>
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_plane_mode_key"
        android:summary="@string/pref_plane_mode_summary"
        android:title="@string/pref_plane_mode"/>

    <EditTextPreference
        android:defaultValue="25"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        android:key="@string/pref_total_time_key"
        android:summary="Change the total time (in minutes) to meet your needs."
        android:title="Total time"/>
</PreferenceScreen>